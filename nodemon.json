{
  "watch": [
    "src",
    "controllers",
    "services",
    "models",
    "routes",
    "utils",
    "middleware"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules",
    "*.test.js",
    "*.spec.js",
    "coverage",
    "tests"
  ],
  "exec": "node src/index.js",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000"
}

